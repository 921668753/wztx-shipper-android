<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"/>

    <LinearLayout
        style="@style/Match44"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/deliveryTime"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <RatingBar
            android:id="@+id/rb_deliveryTime"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen41"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/serviceAttitude"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <RatingBar
            android:id="@+id/rb_serviceAttitude"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen41"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        style="@style/Match44"
        android:layout_marginBottom="@dimen/dimen10"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/satisfaction"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <RatingBar
            android:id="@+id/rb_satisfaction"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen54"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_customerEvaluation"
        style="@style/MatchWrap"
        android:background="@color/mainColor"
        android:paddingLeft="@dimen/dimen15"
        android:text="@string/customerEvaluation"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize15"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_note"
        style="@style/MatchWrap"
        android:background="@color/mainColor"
        android:gravity="top"
        android:hint="@string/comment"
        android:inputType="textMultiLine"
        android:minHeight="@dimen/dimen100"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:paddingTop="@dimen/dimen10"
        android:textColorHint="@color/hintcolors"
        android:textCursorDrawable="@drawable/shape_cursor"
        android:textSize="@dimen/textsize14" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen32"
        android:background="@drawable/shape_login"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize16" />

</LinearLayout>
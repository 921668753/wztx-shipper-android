<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <TextView
        style="@style/DividerWidth"
        android:layout_marginTop="@dimen/dimen10" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/phone"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/MatchMatch"
            android:layout_marginLeft="@dimen/dimen41"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:hint="@string/hintAccountText"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/c7C7CDColors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize15" />


        <ImageView
            android:id="@+id/img_deletePhone"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:paddingBottom="@dimen/dimen13"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen10"
            android:paddingTop="@dimen/dimen13"
            android:src="@mipmap/delete"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/commom_dividerwidth1" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/verificationCode"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />


        <EditText
            android:id="@+id/et_code"
            style="@style/AutoMatch"
            android:layout_marginLeft="@dimen/dimen41"
            android:layout_marginRight="@dimen/dimen5"
            android:background="@android:color/transparent"
            android:hint="@string/errorCode"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/c7C7CDColors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/img_deleteCode"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:paddingBottom="@dimen/dimen13"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen10"
            android:paddingTop="@dimen/dimen13"
            android:src="@mipmap/delete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="@dimen/dimen75"
            android:layout_height="@dimen/dimen26"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@drawable/shape_login1"
            android:gravity="center"
            android:text="@string/testGetCode"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <TextView
        android:id="@+id/tv_determine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen26"
        android:background="@drawable/shape_login1"
        android:gravity="center"
        android:text="@string/determine"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize16" />

</LinearLayout>
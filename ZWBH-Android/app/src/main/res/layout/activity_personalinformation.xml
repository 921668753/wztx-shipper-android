<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>


    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen75"
                android:background="@color/mainColor"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen1"
                        android:layout_weight="0.7"
                        android:background="@android:color/transparent" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen20"
                        android:layout_marginRight="@dimen/dimen20"
                        android:background="@color/certificationcolors" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen20"
                        android:layout_marginRight="@dimen/dimen20"
                        android:background="@color/certificationcolors" />


                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen1"
                        android:layout_weight="0.7"
                        android:background="@android:color/transparent" />

                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen8"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/registeredPhoneNumber" />


                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/information"
                        android:textColor="@color/certificationcolors1" />

                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/identityAuthentication" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/MatchWrap"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10"
                android:text="@string/prompt"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize15" />

            <TextView style="@style/DividerWidth" />

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_accountNumber"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/realName"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_accountNumber"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen41"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/pleaseFillOut"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <TextView
                style="@style/DividerWidth"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginRight="@dimen/dimen15" />


            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/sex"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <ImageView
                    android:id="@+id/img_man"
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen70"
                    android:paddingRight="@dimen/dimen10"
                    android:src="@mipmap/selected" />


                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/man"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />


                <ImageView
                    android:id="@+id/img_woman"
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen40"
                    android:paddingRight="@dimen/dimen10"
                    android:src="@mipmap/selected1" />

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/woman"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <TextView
                style="@style/DividerWidth"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginRight="@dimen/dimen15" />

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pwd"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/IdNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_IdNumber"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen41"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                    android:hint="@string/pleaseFillOut"
                    android:inputType="numberSigned"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>

            <TextView style="@style/DividerWidth" />


            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen20"
                android:background="@color/mainColor"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen40"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:gravity="center_vertical"
                    android:text="@string/holdingIdPhoto" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_holdingIdentityCertification"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen140"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dimen15"
                        android:paddingRight="@dimen/dimen15"
                        android:src="@mipmap/holdingidentitycertification" />


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen140"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dimen15"
                        android:paddingRight="@dimen/dimen15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/samplephoto" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen13"
                android:paddingLeft="@dimen/dimen15"
                android:text="@string/sample"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                style="@style/MatchWrap"
                android:layout_marginBottom="@dimen/dimen5"
                android:layout_marginTop="@dimen/dimen5"
                android:paddingLeft="@dimen/dimen15"
                android:text="@string/sample1"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/common_bottombar"></include>
</LinearLayout>
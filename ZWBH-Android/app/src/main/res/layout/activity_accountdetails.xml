<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/mainColor">


        <ImageView
            android:id="@+id/img_back"
            style="@style/WrapWrap"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen15"
            android:src="@mipmap/back" />

        <TextView
            style="@style/WrapWrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/accountDetails"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_classification"
            style="@style/WrapMatch"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dimen15">

            <TextView
                android:id="@+id/tv_classification"
                style="@style/WrapWrap"
                android:text="@string/thisWeek"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize16" />

            <ImageView
                android:layout_width="@dimen/dimen8"
                android:layout_height="@dimen/dimen5"
                android:layout_marginLeft="@dimen/dimen5"
                android:src="@mipmap/icon_down" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_paid"
            style="@style/AutoMatch"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_paid"
                style="@style/MatchAuto"
                android:gravity="center"
                android:text="@string/paid"
                android:textColor="@color/announcementCloseColors"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_paid1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1.5"
                android:layout_marginLeft="@dimen/dimen55"
                android:layout_marginRight="@dimen/dimen55"
                android:background="@color/announcementCloseColors" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_unpaid"
            style="@style/AutoMatch"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_unpaid"
                style="@style/MatchAuto"
                android:gravity="center"
                android:text="@string/unpaid"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_unpaid1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1.5"
                android:layout_marginLeft="@dimen/dimen55"
                android:layout_marginRight="@dimen/dimen55"
                android:background="@color/mainColor" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_content"
        style="@style/MatchMatch" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen75"
                android:background="@color/mainColor"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Auto1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />


                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />


                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen8"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/registeredPhoneNumber" />


                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/enterpriseInformation" />

                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/qualification"
                        android:textColor="@color/certificationcolors1" />

                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/operationInformation" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen20"
                android:background="@color/mainColor"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen40"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:gravity="center_vertical"
                    android:text="@string/holdingIdPhoto" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_slegalIdCardIs"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen140"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dimen15"
                        android:paddingRight="@dimen/dimen15"
                        android:src="@mipmap/holdingidentitycertification" />


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen140"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dimen15"
                        android:paddingRight="@dimen/dimen15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/samplephoto" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen13"
                android:paddingLeft="@dimen/dimen15"
                android:text="@string/sample"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                style="@style/MatchWrap"
                android:layout_marginBottom="@dimen/dimen5"
                android:layout_marginTop="@dimen/dimen5"
                android:paddingLeft="@dimen/dimen15"
                android:text="@string/sample1"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <ImageView
                android:id="@+id/img_legalIdCardIs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen200"
                android:background="@color/mainColor"
                android:paddingBottom="@dimen/dimen20"
                android:paddingLeft="@dimen/dimen40"
                android:paddingRight="@dimen/dimen40"
                android:paddingTop="@dimen/dimen20"
                android:src="@mipmap/legalidcardis" />

            <ImageView
                android:id="@+id/img_legalIdCardBack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen180"
                android:background="@color/mainColor"
                android:paddingBottom="@dimen/dimen20"
                android:paddingLeft="@dimen/dimen40"
                android:paddingRight="@dimen/dimen40"
                android:scaleType="fitXY"
                android:src="@mipmap/legalidcardback" />


            <ImageView
                android:id="@+id/img_businessLicense"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen180"
                android:background="@color/mainColor"
                android:paddingBottom="@dimen/dimen20"
                android:paddingLeft="@dimen/dimen40"
                android:paddingRight="@dimen/dimen40"
                android:src="@mipmap/businesslicense" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/common_bottombar"></include>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/mainColor"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen10">
    <!--推荐记录-->

    <cn.bingoogolapple.imageview.BGAImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_user"
        android:layout_width="@dimen/dimen50"
        android:layout_height="@dimen/dimen50"
        android:scaleType="centerCrop"
        android:src="@mipmap/headportrait"
        app:bga_iv_isCircle="true" />

    <LinearLayout
        style="@style/AutoMatch"
        android:layout_marginLeft="@dimen/dimen13"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/MatchAuto"
            android:gravity="bottom"
            android:text="张三"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            style="@style/MatchAuto"
            android:layout_marginTop="@dimen/dimen10"
            android:gravity="top"
            android:text="推荐成功"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize14" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_bonus"
        style="@style/WrapMatch"
        android:gravity="center"
        android:text="奖励5元"
        android:textColor="@color/lonincolors"
        android:textSize="@dimen/textsize14" />

</LinearLayout>
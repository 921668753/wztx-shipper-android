<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <TextView
        android:id="@+id/tv_choicePayment"
        style="@style/WrapWrap"
        android:padding="@dimen/dimen15"
        android:text="@string/choicePayment" />

    <LinearLayout
        android:id="@+id/ll_balancePayment"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_balancePayment"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:src="@mipmap/balancepayment" />

        <TextView
            android:id="@+id/tv_balancePayment"
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/balancePayment"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/img_balancePayment1"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:layout_marginRight="@dimen/dimen15"
            android:padding="@dimen/dimen10"
            android:src="@mipmap/selected" />

    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        android:id="@+id/ll_weChatPay"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:src="@mipmap/weixin" />

        <TextView
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/weChatPay"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/img_weChatPay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen40"
            android:layout_marginRight="@dimen/dimen15"
            android:padding="@dimen/dimen10"
            android:src="@mipmap/selected1" />

    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        android:id="@+id/ll_alipayPay"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:src="@mipmap/zhifubao" />

        <TextView
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/alipayPay"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/img_alipayPay"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:layout_marginRight="@dimen/dimen15"
            android:padding="@dimen/dimen10"
            android:src="@mipmap/selected1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_broughtAccount"
        style="@style/MatchWrap"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_broughtAccount"
            style="@style/Match44"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:text="@string/broughtAccount"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView style="@style/DividerWidth" />

        <ImageView
            android:id="@+id/img_proofPayment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen200"
            android:background="@color/mainColor"
            android:paddingBottom="@dimen/dimen20"
            android:paddingLeft="@dimen/dimen40"
            android:paddingRight="@dimen/dimen40"
            android:paddingTop="@dimen/dimen20"
            android:scaleType="fitXY"
            android:src="@mipmap/paypingzheng" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_determine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen32"
        android:background="@drawable/shape_login"
        android:gravity="center"
        android:text="@string/determine"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize12" />


</LinearLayout>
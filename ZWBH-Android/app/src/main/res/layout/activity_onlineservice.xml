<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />


    <LinearLayout
        android:id="@+id/ll_servicePhone"
        style="@style/Match44"
        android:layout_marginTop="@dimen/dimen15"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:gravity="center"
            android:text="@string/customerServiceTelephone"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_servicePhone"
            style="@style/AutoWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_complaints"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:gravity="center"
            android:text="@string/complaintTelphone"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_complaints"
            style="@style/AutoWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />


    <LinearLayout
        android:id="@+id/emailAddress"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:gravity="center"
            android:text="@string/emailAddress"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_emailAddress"
            style="@style/AutoWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/textColor"
            android:textIsSelectable="true"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />
</LinearLayout>
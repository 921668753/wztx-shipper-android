        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/dimen45"
            android:layout_height="@dimen/dimen45"
            android:layout_marginRight="@dimen/dimen15"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_user_header" />


        <ImageView
            android:layout_width="@dimen/dimen7"
            android:layout_height="@dimen/dimen14"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <include layout="@layout/commom_dividerwidth1" />

    <LinearLayout
        android:id="@+id/ll_name"
        style="@style/Match45"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/userName"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/MatchWrap"
            android:gravity="right"
            android:paddingRight="@dimen/dimen15"
            android:text="--"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <include layout="@layout/commom_dividerwidth1" />

    <LinearLayout
        style="@style/Match45"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/userPhone"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/MatchWrap"
            android:gravity="right"
            android:paddingRight="@dimen/dimen15"
            android:text="--"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <TextView
        style="@style/DividerWidth"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_accountDeposit"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/accountDeposit"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_accountDeposit"
            style="@style/AutoWrap"
            android:gravity="right"
            android:paddingRight="@dimen/dimen15"
            android:text="@string/failurePay"
            android:textColor="@color/lonincolors"
            android:textSize="@dimen/mian_font_size" />

        <ImageView
            android:id="@+id/img_arrow"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <TextView
        style="@style/DividerWidth"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_personalCertificate"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/personalCertificate"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_personalCertificate"
            style="@style/AutoWrap"
            android:gravity="right"
            android:paddingRight="@dimen/dimen15"
            android:text="@string/unauthorized"
            android:textColor="@color/lonincolors"
            android:textSize="@dimen/mian_font_size" />

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />
</LinearLayout>
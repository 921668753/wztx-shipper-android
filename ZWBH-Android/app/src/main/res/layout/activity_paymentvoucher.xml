<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView
        style="@style/WrapWrap"
        android:paddingBottom="@dimen/dimen13"
        android:paddingLeft="@dimen/dimen15"
        android:paddingTop="@dimen/dimen13"
        android:text="@string/uploadProofPayment"
        android:textColor="@color/hintcolors"
        android:textSize="@dimen/textsize14" />

    <TextView style="@style/DividerWidth" />

    <TextView
        android:id="@+id/tv_broughtAccount"
        style="@style/Match45"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:text="@string/broughtAccount"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize15" />

    <TextView style="@style/DividerWidth" />

    <ImageView
        android:id="@+id/img_proofPayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen195"
        android:background="@color/mainColor"
        android:paddingBottom="@dimen/dimen20"
        android:paddingLeft="@dimen/dimen37"
        android:paddingRight="@dimen/dimen37"
        android:paddingTop="@dimen/dimen20"
        android:scaleType="fitXY"
        android:src="@mipmap/paypingzheng" />


    <TextView
        android:id="@+id/tv_determine"
        style="@style/Match45"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen25"
        android:background="@drawable/shape_login"
        android:gravity="center"
        android:text="@string/determine"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize16" />


</LinearLayout>
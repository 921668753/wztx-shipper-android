<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>


    <TextView style="@style/DividerWidth" />


    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen75"
                android:background="@color/mainColor"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Auto1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />


                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />


                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification" />

                    <TextView
                        style="@style/Auto1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen8"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/registeredPhoneNumber" />


                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/enterpriseInformation" />

                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/qualification" />

                    <TextView
                        style="@style/AutoWrap"
                        android:gravity="center"
                        android:text="@string/operationInformation"
                        android:textColor="@color/certificationcolors1" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                style="@style/Match44"
                android:layout_marginTop="@dimen/dimen20"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/operationIdNumber"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_operationIdNumber"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen41"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                    android:hint="@string/pleaseFillOut"
                    android:inputType="numberSigned"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <ImageView
                android:id="@+id/img_operationlIdCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen200"
                android:layout_marginTop="@dimen/dimen20"
                android:background="@color/mainColor"
                android:paddingBottom="@dimen/dimen20"
                android:paddingLeft="@dimen/dimen40"
                android:paddingRight="@dimen/dimen40"
                android:paddingTop="@dimen/dimen20"
                android:src="@mipmap/operationlidcard" />

            <ImageView
                android:id="@+id/img_operationlIdCardIs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen180"
                android:background="@color/mainColor"
                android:paddingBottom="@dimen/dimen20"
                android:paddingLeft="@dimen/dimen40"
                android:paddingRight="@dimen/dimen40"
                android:src="@mipmap/operationlidcardis" />

            <ImageView
                android:id="@+id/img_operationlIdCardBack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen180"
                android:background="@color/mainColor"
                android:paddingBottom="@dimen/dimen20"
                android:paddingLeft="@dimen/dimen40"
                android:paddingRight="@dimen/dimen40"
                android:src="@mipmap/operationlidcardback" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/common_bottombar"></include>
</LinearLayout>
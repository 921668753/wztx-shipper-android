<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen65"
    android:background="@color/mainColor"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/dimen40"
        android:layout_height="@dimen/dimen40"
        android:src="@mipmap/sirenxiaoxi" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/WrapWrap"
        android:layout_marginLeft="@dimen/dimen14"
        android:singleLine="true"
        android:text="--"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize16" />

    <TextView style="@style/MatchAuto" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="@dimen/dimen18"
        android:layout_height="@dimen/dimen18"
        android:layout_marginLeft="@dimen/dimen10"
        android:background="@drawable/shape_dot"
        android:gravity="center"
        android:maxLength="2"
        android:text="--"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/dimen12" />


    <ImageView
        style="@style/WrapWrap"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen10"
        android:src="@mipmap/arrow" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:a_zhon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".mine.myorder.orderdetails.EvaluationDriverActivity">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen57"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen30"
            android:text="@string/deliveryTime"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize14" />

        <com.azhong.ratingbar.RatingBar
            android:id="@+id/rb_deliveryTime"
            android:layout_width="@dimen/dimen210"
            android:layout_height="@dimen/dimen46"
            android:layout_marginLeft="@dimen/dimen16"
            android:layout_marginTop="@dimen/dimen15"
            a_zhon:clickable="true"
            a_zhon:image_height="@dimen/dimen42"
            a_zhon:image_padding="@dimen/dimen9"
            a_zhon:image_width="@dimen/dimen42"
            a_zhon:star="0"
            a_zhon:star_count="5"
            a_zhon:star_img="@mipmap/star1"
            a_zhon:unstar_img="@mipmap/star" />

    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginBottom="@dimen/dimen14"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen14"
            android:text="@string/serviceAttitude"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize14" />

        <com.azhong.ratingbar.RatingBar
            android:id="@+id/rb_serviceAttitude"
            android:layout_width="@dimen/dimen210"
            android:layout_height="@dimen/dimen46"
            android:layout_marginLeft="@dimen/dimen16"
            a_zhon:clickable="true"
            a_zhon:image_height="@dimen/dimen42"
            a_zhon:image_padding="@dimen/dimen9"
            a_zhon:image_width="@dimen/dimen42"
            a_zhon:star="0"
            a_zhon:star_count="5"
            a_zhon:star_img="@mipmap/star1"
            a_zhon:unstar_img="@mipmap/star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen57"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dimen15"
            android:paddingBottom="@dimen/dimen28"
            android:text="@string/satisfaction"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize14" />

        <com.azhong.ratingbar.RatingBar
            android:id="@+id/rb_satisfactionAttitude"
            android:layout_width="@dimen/dimen210"
            android:layout_height="@dimen/dimen46"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginLeft="@dimen/dimen31"
            a_zhon:clickable="true"
            a_zhon:image_height="@dimen/dimen42"
            a_zhon:image_padding="@dimen/dimen9"
            a_zhon:image_width="@dimen/dimen42"
            a_zhon:star="0"
            a_zhon:star_count="5"
            a_zhon:star_img="@mipmap/star1"
            a_zhon:unstar_img="@mipmap/star" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_note"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/mainColor"
        android:gravity="top"
        android:hint="@string/comment"
        android:inputType="textMultiLine"
        android:minHeight="@dimen/dimen100"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:paddingTop="@dimen/dimen10"
        android:textColorHint="@color/hintcolors"
        android:textCursorDrawable="@drawable/shape_cursor"
        android:textSize="@dimen/textsize14" />


    <TextView
        android:id="@+id/tv_submit"
        style="@style/Match50"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen32"
        android:background="@drawable/shape_login"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize16" />

</LinearLayout>
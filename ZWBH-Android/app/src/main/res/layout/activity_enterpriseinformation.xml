<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activityRootView"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen75"
                android:background="@color/mainColor"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Auto1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="#dcdcdc" />

                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />


                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginRight="@dimen/dimen15"
                        android:background="@color/certificationcolors" />


                    <ImageView
                        style="@style/WrapWrap"
                        android:src="@mipmap/certification1" />

                    <TextView
                        style="@style/Auto1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen8"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/AutoMatch"
                        android:gravity="center"
                        android:text="@string/registeredPhoneNumber" />


                    <TextView
                        style="@style/AutoMatch"
                        android:gravity="center"
                        android:text="@string/enterpriseInformation"
                        android:textColor="@color/certificationcolors1" />

                    <TextView
                        style="@style/AutoMatch"
                        android:gravity="center"
                        android:text="@string/qualification" />

                    <TextView
                        style="@style/AutoMatch"
                        android:gravity="center"
                        android:text="@string/operationInformation" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/MatchWrap"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10"
                android:text="@string/prompt"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize15" />

            <TextView style="@style/DividerWidth" />

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/companyName"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_companyName"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen55"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/companyName1"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/registrationNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_registrationNumber"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/registrationNumber1"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/legalPersonName"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_legalPersonName"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen25"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/pleaseFillOut"
                    android:inputType="text"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/legalPersonIdNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_legalPersonIdNumber"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen25"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/pleaseFillOut"
                    android:inputType="numberSigned"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/phoneNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_phoneNumber"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen25"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/pleaseFillOut"
                    android:inputType="phone"
                    android:maxLength="17"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/address"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen85"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/pleaseFillOut"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/accountName"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_accountName"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen55"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/accountName1"
                    android:inputType="text"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/openingBank"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_openingBank"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen70"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:hint="@string/openingBank1"
                    android:inputType="text"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth"></include>

            <LinearLayout
                style="@style/Match44"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pwd"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/settlementAccount"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <EditText
                    android:id="@+id/et_settlementAccount"
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen55"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@android:color/transparent"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                    android:hint="@string/settlementAccount1"
                    android:inputType="number"
                    android:maxLength="22"
                    android:singleLine="true"
                    android:textColorHint="@color/hintcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>

            <TextView style="@style/DividerWidth" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50"
                android:background="@color/background"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/common_bottombar" />

</LinearLayout>
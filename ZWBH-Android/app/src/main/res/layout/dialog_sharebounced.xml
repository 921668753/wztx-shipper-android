<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_1">

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_alignParentBottom="true"
        android:background="@color/mainColor"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dimen15"
            android:paddingBottom="@dimen/dimen10"
            android:paddingTop="@dimen/dimen10"
            android:text="@string/shareTo"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />


        <LinearLayout
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/dimen15"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_weChatFriends"
                style="@style/WrapWrap"
                android:layout_marginRight="@dimen/dimen32"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen55"
                    android:layout_height="@dimen/dimen55"
                    android:scaleType="fitXY"
                    android:src="@mipmap/umeng_socialize_wechat" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/dimen10"
                    android:text="@string/weChatFriends"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_circleFriends"
                style="@style/WrapWrap"
                android:layout_marginRight="@dimen/dimen32"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/dimen55"
                    android:layout_height="@dimen/dimen55"
                    android:scaleType="fitXY"
                    android:src="@mipmap/umeng_socialize_wxcircle" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/dimen10"
                    android:text="@string/circleFriends"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_QQFriends"
                style="@style/WrapWrap"
                android:layout_marginRight="@dimen/dimen32"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen55"
                    android:layout_height="@dimen/dimen55"
                    android:scaleType="fitXY"
                    android:src="@mipmap/umeng_socialize_qq" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/dimen10"
                    android:text="@string/QQFriends"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Qzone"
                style="@style/WrapWrap"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen55"
                    android:layout_height="@dimen/dimen55"
                    android:scaleType="fitXY"
                    android:src="@mipmap/umeng_socialize_qzone" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/dimen10"
                    android:text="@string/Qzone"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>
        </LinearLayout>

        <TextView style="@style/DividerWidth" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen75"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize18" />

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/MatchWrap"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:paddingTop="@dimen/dimen15"
            android:singleLine="true"
            android:text="--"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/MatchWrap"
            android:paddingBottom="@dimen/dimen15"
            android:paddingLeft="@dimen/dimen15"
            android:text="--"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize13" />
    </LinearLayout>


    <include layout="@layout/common_dividerwidth"></include>


    <WebView
        android:id="@+id/web_content"
        style="@style/MatchWrap"
        android:background="@color/white"
        android:padding="@dimen/dimen15"
        android:textColor="@color/textColor" />

    <include layout="@layout/common_error"></include>

</LinearLayout>
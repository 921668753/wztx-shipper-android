<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/transparent_1"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen233"
        android:layout_margin="@dimen/dimen44"
        android:background="@drawable/shape_assignedvehiclebounced"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout style="@style/MatchWrap">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/dimen24"
                android:text="@string/assignedVehicle"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize18" />


            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="@dimen/dimen40"
                android:layout_height="@dimen/dimen30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen15"
                android:layout_marginTop="@dimen/dimen11"
                android:paddingBottom="@dimen/dimen7"
                android:paddingLeft="@dimen/dimen17"
                android:paddingRight="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:scaleType="fitXY"
                android:src="@mipmap/logincancel" />

        </RelativeLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/dimen26"
            android:layout_marginRight="@dimen/dimen26"
            android:layout_marginTop="@dimen/dimen50"
            android:orientation="horizontal">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/licensePlateNumber"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize16" />

            <EditText
                android:id="@+id/et_pleaseLicensePlateNumber"
                style="@style/AutoMatch"
                android:background="@android:color/transparent"
                android:hint="@string/pleaseLicensePlateNumber"
                android:paddingLeft="@dimen/dimen34"
                android:textColor="@color/titletextcolors"
                android:textColorHint="@color/cDCDCDColors"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize16" />

        </LinearLayout>

        <TextView
            style="@style/DividerWidth"
            android:layout_marginLeft="@dimen/dimen26"
            android:layout_marginRight="@dimen/dimen26"
            android:layout_marginTop="@dimen/dimen17" />


        <TextView
            android:id="@+id/tv_confirmAssigned"
            style="@style/Match44"
            android:layout_marginLeft="@dimen/dimen26"
            android:layout_marginRight="@dimen/dimen26"
            android:layout_marginTop="@dimen/dimen30"
            android:background="@color/announcementCloseColors"
            android:gravity="center"
            android:text="@string/confirmAssigned"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize15" />


    </LinearLayout>

</LinearLayout>
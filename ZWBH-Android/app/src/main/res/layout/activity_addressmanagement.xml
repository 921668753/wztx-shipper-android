<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_deliveryAddress"
            style="@style/AutoMatch"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_deliveryAddress"
                style="@style/MatchAuto"
                android:gravity="center"
                android:text="@string/deliveryAddress"
                android:textColor="@color/announcementCloseColors"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_deliveryAddress1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1.5"
                android:layout_marginLeft="@dimen/dimen55"
                android:layout_marginRight="@dimen/dimen55"
                android:background="@color/announcementCloseColors" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shippingAddress"
            style="@style/AutoMatch"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shippingAddress"
                style="@style/MatchAuto"
                android:gravity="center"
                android:text="@string/shippingAddress"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_shippingAddress1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1.5"
                android:layout_marginLeft="@dimen/dimen55"
                android:layout_marginRight="@dimen/dimen55"
                android:background="@color/mainColor" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_content"
        style="@style/MatchMatch" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_commonError"
    style="@style/MatchAuto"
    android:layout_marginBottom="@dimen/dimen10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone"
    tools:ignore="TextViewEdits">

    <ImageView
        android:id="@+id/img_err"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen100"
        android:src="@mipmap/zwt" />

    <TextView
        android:id="@+id/tv_hintText"
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/shape_login1"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20"
        android:paddingTop="@dimen/dimen10"
        android:text="--"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize15" />

</LinearLayout>
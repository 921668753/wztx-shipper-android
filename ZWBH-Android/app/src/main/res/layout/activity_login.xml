<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--<include layout="@layout/common_title"></include>-->
    <LinearLayout
        android:id="@+id/titlebarl"
        style="@style/MatchWrap"
        android:orientation="vertical">

        <cn.bingoogolapple.titlebar.BGATitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/titlebar"
            style="@style/TitleBar"
            android:background="@color/titlebackground"
            app:bgatitlebar_isTitleTextBold="false"
            app:bgatitlebar_leftDrawable="@mipmap/logincancel"
            app:bgatitlebar_rightText="ypu">

        </cn.bingoogolapple.titlebar.BGATitleBar>

        <TextView style="@style/TitleDividerWidth" />
    </LinearLayout>

    <TextView
        style="@style/DividerWidth"
        android:layout_marginTop="@dimen/dimen25" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_accountNumber"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/accountNumber"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <EditText
            android:id="@+id/et_accountNumber"
            style="@style/AutoMatch"
            android:layout_marginLeft="@dimen/dimen41"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:digits="1234567890"
            android:hint="@string/hintAccountText"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColorHint="@color/hintcolors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/img_quxiao"
            android:layout_width="@dimen/dimen45"
            android:layout_height="@dimen/dimen45"
            android:layout_marginRight="@dimen/dimen15"
            android:padding="@dimen/dimen15"
            android:src="@mipmap/delete"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/DividerWidth"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen15" />
    </LinearLayout>

    <LinearLayout
        style="@style/Match44"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pwd"
            style="@style/WrapWrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/password"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/AutoMatch"
            android:layout_marginLeft="@dimen/dimen55"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:hint="@string/hintPasswordText"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textColorHint="@color/hintcolors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/img_quxiao1"
            android:layout_width="@dimen/dimen45"
            android:layout_height="@dimen/dimen45"
            android:layout_marginRight="@dimen/dimen15"
            android:padding="@dimen/dimen15"
            android:src="@mipmap/delete"
            android:visibility="gone" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen20"
        android:background="@drawable/shape_login1"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize16" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen20">

        <TextView
            android:id="@+id/tv_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen54"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/forgotPassword"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen54"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen15"
            android:text="@string/register1"
            android:textColor="@color/lonincolors"
            android:textSize="@dimen/textsize15" />
    </RelativeLayout>


</LinearLayout>
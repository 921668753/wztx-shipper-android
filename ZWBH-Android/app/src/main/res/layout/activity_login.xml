<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titlebarl"
        style="@style/MatchWrap"
        android:orientation="vertical">

        <cn.bingoogolapple.titlebar.BGATitleBar
            android:id="@+id/titlebar"
            style="@style/TitleBar"
            app:bgatitlebar_leftDrawable="@mipmap/logincancel"
            app:bgatitlebar_rightText="" />

        <TextView style="@style/TitleDividerWidth" />
    </LinearLayout>

    <TextView
        style="@style/DividerWidth"
        android:layout_marginTop="@dimen/dimen25" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_accountNumber"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/accountNumber"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

        <EditText
            android:id="@+id/et_accountNumber"
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen41"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:hint="@string/hintAccountText"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/c7C7CDColors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/img_quxiao"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:paddingBottom="@dimen/dimen13"
            android:paddingLeft="@dimen/dimen10"
            android:paddingRight="@dimen/dimen10"
            android:paddingTop="@dimen/dimen13"
            android:src="@mipmap/delete"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/commom_dividerwidth1" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pwd"
            style="@style/WrapWrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/password"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen55"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:digits="@string/alphanumeric"
            android:hint="@string/hintPasswordText"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/c7C7CDColors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize15" />


        <ImageView
            android:id="@+id/img_quxiao1"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:paddingBottom="@dimen/dimen13"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen5"
            android:paddingTop="@dimen/dimen13"
            android:src="@mipmap/delete"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_biyan"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:paddingBottom="@dimen/dimen13"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen10"
            android:paddingTop="@dimen/dimen13"
            android:src="@mipmap/ic_biyan" />

    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen20"
        android:background="@drawable/shape_login1"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize16" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen20">

        <TextView
            android:id="@+id/tv_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen35"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/forgotPassword"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen35"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen15"
            android:text="@string/register1"
            android:textColor="@color/announcementCloseColors"
            android:textSize="@dimen/textsize15" />
    </RelativeLayout>


    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen25"
        android:paddingRight="@dimen/dimen25">

        <View
            style="@style/AutoMatch"
            android:layout_height="@dimen/dimen1"
            android:layout_gravity="center_vertical"
            android:background="@color/lonin1colors" />

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen11"
            android:paddingRight="@dimen/dimen11"
            android:text="@string/thirdpartylogin"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize14" />

        <View
            style="@style/AutoMatch"
            android:layout_height="@dimen/dimen1"
            android:layout_gravity="center_vertical"
            android:background="@color/lonin1colors" />
    </LinearLayout>

    <LinearLayout
        style="@style/WrapWrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen35"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_loginweixin"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:paddingTop="@dimen/dimen15">

            <ImageView
                android:layout_width="@dimen/dimen51"
                android:layout_height="@dimen/dimen51"
                android:src="@mipmap/weixin" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen14"
                android:text="@string/thirdweixin"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_loginQQ"
            style="@style/WrapWrap"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:paddingTop="@dimen/dimen15">

            <ImageView
                android:layout_width="@dimen/dimen51"
                android:layout_height="@dimen/dimen51"
                android:src="@mipmap/qq" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen14"
                android:text="@string/thirdqq"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
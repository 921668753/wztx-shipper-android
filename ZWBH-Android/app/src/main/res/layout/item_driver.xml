<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/mainColor"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchWrap"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:paddingTop="@dimen/dimen14">

        <TextView
            android:id="@+id/tv_name"
            style="@style/AutoWrap"
            android:text="戴师傅"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="133****2067"
            android:textColor="@color/f2222Colors"
            android:textSize="@dimen/textsize15" />

    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen14"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15">

        <TextView
            android:id="@+id/tv_licensePlateNumber"
            style="@style/AutoWrap"
            android:text="苏EA5670"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/tv_conductorModels"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="4.2米/厢式货车"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize12" />

    </LinearLayout>


    <include layout="@layout/commom_dividerwidth1" />

    <LinearLayout
        style="@style/Match44"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView style="@style/AutoWrap" />

        <LinearLayout
            android:id="@+id/ll_joinBlacklist"
            style="@style/WrapWrap"
            android:orientation="horizontal"
            android:padding="@dimen/dimen5">

            <ImageView
                android:id="@+id/img_join"
                android:layout_width="@dimen/dimen17"
                android:layout_height="@dimen/dimen17"
                android:src="@mipmap/icon_join" />

            <TextView
                android:id="@+id/tv_joinBlacklist"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen5"
                android:text="@string/joinBlacklist"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize13" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_delete"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:orientation="horizontal"
            android:padding="@dimen/dimen5">

            <ImageView
                android:layout_width="@dimen/dimen15"
                android:layout_height="@dimen/dimen17"
                android:src="@mipmap/icon_delete" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen5"
                android:text="@string/delete1"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize13" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
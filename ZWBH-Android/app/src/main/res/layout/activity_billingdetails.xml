<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">

            <TextView
                style="@style/Match50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:text="@string/receiptInformation"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize15"
                android:textStyle="bold" />

            <TextView style="@style/DividerWidth" />


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen19">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/detailedAddress"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize15" />


                <TextView
                    android:id="@+id/tv_detailedAddress"
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/dimen43"
                    android:text="--"
                    android:textColor="@color/a1A1AColors"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen19"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/recipient"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize15" />


                <TextView
                    android:id="@+id/tv_name"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen58"
                    android:maxWidth="@dimen/dimen160"
                    android:text="--"
                    android:textColor="@color/a1A1AColors"
                    android:textSize="@dimen/textsize15" />


                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen17"
                    android:text="--"
                    android:textColor="@color/a1A1AColors"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>


            <TextView
                style="@style/Match50"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:text="@string/invoiceInformation"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize15"
                android:textStyle="bold" />

            <TextView style="@style/DividerWidth" />


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen19">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/invoiceRise"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize15" />


                <TextView
                    android:id="@+id/tv_invoiceRise"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen43"
                    android:text="--"
                    android:textColor="@color/a1A1AColors"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_taxpayerIdentificationNumber"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/taxpayerIdentificationNumber"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize15" />


                <TextView
                    android:id="@+id/tv_taxpayerIdentificationNumber"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen13"
                    android:text="--"
                    android:textColor="@color/a1A1AColors"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/invoiceContent"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize15" />


                <TextView
                    android:id="@+id/tv_invoiceContent"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen43"
                    android:maxWidth="@dimen/dimen160"
                    android:text="--"
                    android:textColor="@color/a1A1AColors"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/invoiceAmount"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize15" />


                <TextView
                    android:id="@+id/tv_invoiceAmount"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen43"
                    android:maxWidth="@dimen/dimen233"
                    android:text="0.00"
                    android:textColor="@color/announcementCloseColors"
                    android:textSize="@dimen/textsize15" />

                <TextView
                    style="@style/WrapWrap"
                    android:text="å…ƒ"
                    android:textColor="@color/announcementCloseColors"
                    android:textSize="@dimen/textsize15" />

            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen19"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/applyTime"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize15" />

                <TextView
                    android:id="@+id/tv_applyTime"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen43"
                    android:text="--"
                    android:textColor="@color/a1A1AColors"
                    android:textSize="@dimen/textsize15" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_anInvoice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen65"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">


                <LinearLayout
                    style="@style/AutoWrap"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/MatchWrap"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_anInvoice"
                            style="@style/WrapWrap"
                            android:text="1"
                            android:textColor="@color/titletextcolors"
                            android:textSize="@dimen/textsize15" />

                        <TextView
                            style="@style/WrapWrap"
                            android:text="@string/anInvoice"
                            android:textColor="@color/titletextcolors"
                            android:textSize="@dimen/textsize15" />

                        <TextView
                            android:id="@+id/tv_anOrder"
                            style="@style/WrapWrap"
                            android:text="0"
                            android:textColor="@color/titletextcolors"
                            android:textSize="@dimen/textsize15" />

                        <TextView
                            style="@style/WrapWrap"
                            android:text="@string/anOrder"
                            android:textColor="@color/titletextcolors"
                            android:textSize="@dimen/textsize15" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/MatchWrap"
                        android:layout_marginTop="@dimen/dimen5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_startTime"
                            style="@style/WrapWrap"
                            android:text="--"
                            android:textColor="@color/hintcolors"
                            android:textSize="@dimen/textsize12" />

                        <TextView
                            style="@style/WrapWrap"
                            android:text="-"
                            android:textColor="@color/hintcolors"
                            android:textSize="@dimen/textsize12" />

                        <TextView
                            android:id="@+id/tv_endTime"
                            style="@style/WrapWrap"
                            android:text="--"
                            android:textColor="@color/hintcolors"
                            android:textSize="@dimen/textsize12" />

                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/dimen8"
                    android:layout_height="@dimen/dimen14"
                    android:src="@mipmap/ic_arrow" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
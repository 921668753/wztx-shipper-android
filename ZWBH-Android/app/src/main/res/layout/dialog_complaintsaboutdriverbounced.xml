<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/transparent_1"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        style="@style/MatchWrap"
        android:layout_margin="@dimen/dimen44"
        android:background="@drawable/shape_assignedvehiclebounced"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout style="@style/MatchWrap">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/dimen24"
                android:text="@string/complaintsAboutDriver"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize18" />


            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="@dimen/dimen40"
                android:layout_height="@dimen/dimen30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen15"
                android:layout_marginTop="@dimen/dimen11"
                android:paddingBottom="@dimen/dimen7"
                android:paddingLeft="@dimen/dimen17"
                android:paddingRight="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:scaleType="fitXY"
                android:src="@mipmap/logincancel" />

        </RelativeLayout>


        <EditText
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/dimen26"
            android:layout_marginRight="@dimen/dimen26"
            android:layout_marginTop="@dimen/dimen24"
            android:background="@color/fAFAFAColors"
            android:gravity="top"
            android:hint="@string/describeSpecificReasons"
            android:minHeight="@dimen/dimen135"
            android:paddingBottom="@dimen/dimen13"
            android:paddingLeft="@dimen/dimen10"
            android:paddingRight="@dimen/dimen10"
            android:paddingTop="@dimen/dimen13"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/cDCDCDColors"
            android:textSize="@dimen/textsize14" />


        <TextView
            android:id="@+id/tv_submit"
            style="@style/Match44"
            android:layout_marginBottom="@dimen/dimen17"
            android:layout_marginLeft="@dimen/dimen26"
            android:layout_marginRight="@dimen/dimen26"
            android:layout_marginTop="@dimen/dimen23"
            android:background="@color/announcementCloseColors"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize15" />


    </LinearLayout>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.MyDrawerArrowStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="android:homeAsUpIndicator">@mipmap/back</item>
    </style>
    <!--加入一個新的 navigation drarwer 的風格-->
    <style name="AppTheme.MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--將 spinBars 屬性設定為 false-->
        <item name="spinBars">false</item>
        <!--設定 drawer arrow 的顏色-->
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppStartLoadTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--TitleDividerWidth分割线-->
    <style name="TitleDividerWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/titledivider</item>
    </style>

    <!--分割线-->
    <style name="DividerWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/dividercolors</item>
    </style>

    <style name="DividerHeight">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividercolors</item>
    </style>
    <!--nav_header_main.xml-->
    <style name="NavHeaderMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="NavHeaderMainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/mian_font_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:background">@color/mainColor</item>
        <item name="bgatitlebar_leftAndRightTextColor">@color/announcementCloseColors</item>
        <item name="bgatitlebar_leftAndRightTextSize">@dimen/textsize15</item>
        <item name="bgatitlebar_titleTextColor">@color/titletextcolors</item>
        <item name="bgatitlebar_titleTextSize">@dimen/textsize18</item>
        <item name="bgatitlebar_rightMaxWidth">@dimen/dimen100</item>
        <item name="bgatitlebar_leftAndRightPadding">@dimen/dimen15</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- dim:模糊的 阴影效果 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="Auto1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Match44">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen44</item>
    </style>

    <style name="Match45">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen45</item>
    </style>

    <style name="Match50">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen50</item>
    </style>

    <style name="Match30">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen30</item>
    </style>

    <style name="Image20">
        <item name="android:layout_width">@dimen/dimen20</item>
        <item name="android:layout_height">@dimen/dimen20</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageArrow">
        <item name="android:layout_width">@dimen/dimen6</item>
        <item name="android:layout_height">@dimen/dimen12</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Match1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Match1.5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
    </style>

    <!--评价评分星级-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_height">@dimen/dimen48</item>
        <item name="android:layout_width">@dimen/dimen41</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/titletextcolors</item>
        <item name="android:textSize">@dimen/dimen30</item>
    </style>

    <style name="textview_codeStyle">
        <item name="android:layout_height">@dimen/dimen1</item>
        <item name="android:layout_width">@dimen/dimen45</item>
        <item name="android:background">@color/translucent_gray</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_animation_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_animation_hide</item>
    </style>
</resources>
